{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://localhost:3000/",
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Shipping Page",
      "url": "http://localhost:3000/shipping",
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Shipping Page, No Input",
      "url": "http://localhost:3000/shipping",
      "clickSelector": "li.notinput button",
      "delay": 1500,
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Shipping Page, Wrong Input",
      "url": "http://localhost:3000/shipping",
      "keyPressSelectors": [
        {
          "selector": "#fullname",
          "keyPress": "Tomiwa"
        },
        {
          "selector": "#address1",
          "keyPress": "Kacek"
        }
      ],
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Billing Page",
      "url": "http://localhost:3000/billing",
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Billing Page, No Input",
      "url": "http://localhost:3000/billing",
      "clickSelector": "li.notinput button",
      "delay": 1500,
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Billing Page, Wrong Input",
      "url": "http://localhost:3000/billing",
      "keyPressSelectors": [
        {
          "selector": "#fullname",
          "keyPress": "Tomiwa"
        },
        {
          "selector": "#address1",
          "keyPress": "Kacek"
        }
      ],
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Payment Page",
      "url": "http://localhost:3000/payment",
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Payment Page, No Input",
      "url": "http://localhost:3000/payment",
      "clickSelector": "li.notinput button",
      "delay": 1500,
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Payment Page, Wrong Input",
      "url": "http://localhost:3000/payment",
      "keyPressSelectors": [
        {
          "selector": "#name",
          "keyPress": "Tomiwa"
        },
        {
          "selector": "#cvv",
          "keyPress": "12"
        }
      ],
      "misMatchThreshold" : 0.1
    },
    {
      "label": "Cart Page",
      "url": "http://localhost:3000/cart",
      "misMatchThreshold" : 0.1
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
